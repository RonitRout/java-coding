package java_coding_java8_arrays;

import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

public class ArrayEvenOdd {

	public static void main(String[] args) {

		int a[] = {1,2,3,4,5,6,7,8,9};
		List<Integer>number=Arrays.stream(a).boxed().collect(Collectors.toList());
		List<Integer>evenNumber=number.stream().filter(i->i%2==0).collect(Collectors.toList());
		System.out.println("Even numbers: "+evenNumber);
		
		Map<Boolean,List<Integer>> results=Arrays.stream(a).boxed().collect(Collectors.partitioningBy(i->i%2==0));
		System.out.println("Even numbers : "+results.get(true));
		System.out.println("Odd numbers : "+results.get(false));
	}

}